<%= render 'layouts/header' %>

<div class='container mt-5'>
<h3>部屋情報登録</h3>
<div class='mt-3'>
  <h4><%= @property.building %></h4>
</div>
<%= form_with(model:[@property, @room], local: true) do |f| %>
  <div class='row g-3'>
    <div class='col-md-2 mb-3'>
      <label class='form-label'>部屋番号</label>
      <%= f.text_field :name, class:'form-control', placeholder:'101' %>
    </div>
    <div class='col-md-2 mb-3'>
      <label class='form-label'>間取り</label>
      <%= f.text_field :layout, class:'form-control', placeholder:'1K' %>
    </div>
    <div class='col-md-2 mb-3'>
      <label class='form-label'>広さ(㎡)</label>
      <%= f.text_field :room_size, class:'form-control', placeholder:'23.3' %>
    </div>
    <div class='col-md-2 mb-3'>
      <label class='form-label'>方角</label>
      <%= f.text_field :direction, class:'form-control', placeholder:'南東' %>
    </div>
    <div class=''>
      <%= f.submit "登録" ,class:'btn btn-primary' %>
    </div>
<% end %>
<%=link_to 'もどる', property_path(@property.id), class:'' %>
  </div>
</div>