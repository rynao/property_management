<%= render 'layouts/header' %>

<div class='container'>
<h4 class='py-3'>部屋一覧</h4>
  <table class='table mt-3'>
    <thead>
      <tr>
        <th>物件名称</th>
        <th>部屋</th>
        <th>最新契約開始日</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= room.property.building %></td>
          <td><%= room.name %></td>
          <% if room.contracts.exists? %>
            <td><%= room.contracts.order(start_date: :desc).first.start_date.strftime("%Y年%m月") %></td>
          <% else %>
            <td>-</td>
          <% end %>
          <td><%= link_to '詳細', property_room_path(room.property.id, room.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
