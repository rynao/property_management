<%= render 'layouts/header' %>

<div class='container mt-5'>
<h3>部屋情報登録</h3>
<div>
  <%= @property.building %>
</div>
<%= form_with(model:[@property, @room], local: true) do |f| %>
  <div class='row g-3'>
    <div class='col-md-2 mb-3'>
      <label class='form-label'>部屋番号</label>
      <%= f.text_field :name, class:'form-control', placeholder:'101' %>
    </div>
    <div class=''>
      <%= f.submit "登録" ,class:'btn btn-primary' %>
    </div>
<% end %>
<%=link_to 'もどる', property_path(@property.id), class:'' %>
  </div>
</div>