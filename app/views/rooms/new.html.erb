<%= render 'layouts/header' %>

<div class='container mt-5 d-flex justify-content-center'>
  <div class='card shadow px-5 py-3' style='max-width: 700px'>
    <h3 class='mx-auto mt-3'>部屋情報登録</h3>
      <h5 class='mt-3 mx-auto'><%= @property.building %></h5>
      <%= form_with(model:[@property, @room], local: true) do |f| %>
        <div class='row g-3 py-5'>
          <div class='row mb-3'>
            <label class='col-md-3 form-label'>部屋番号</label>
            <div class='col-md-7'>
              <%= f.text_field :name, class:'form-control', placeholder:'例：101', required: true %>
            </div>
          </div>
          <div class='row mb-3'>
            <label class='col-md-3 form-label'>間取り</label>
            <div class='col-md-7'>
              <%= f.text_field :layout, class:'form-control', placeholder:'例：1K' %>
            </div>
          </div>
          <div class='row mb-3'>
            <label class='col-md-3 form-label'>広さ(㎡)</label>
            <div class='col-md-7'>
              <%= f.text_field :room_size, class:'form-control', placeholder:'例：23.3' %>
            </div>
          </div>
          <div class='row mb-3'>
            <label class='col-md-3 form-label'>方角</label>
            <div class='col-md-7'>
              <%= f.text_field :direction, class:'form-control', placeholder:'例：南東' %>
            </div>
          </div>
          <div class='row my-3'>
            <%= f.submit "登録" ,class:'d-block mx-auto col-md-4 btn btn-primary' %>
            <div class=' mt-3 d-flex justify-content-center'>
              <%=link_to 'もどる', property_path(@property.id), class:'' %>
            </div>
          </div>
      <% end %>
  </div>
</div>