<%= render 'layouts/header' %>

<div class='container mt-5'>
  <h3>支払い情報登録</h3>
  <%= form_with model:@payment, local: true do |f| %>
    <div class='row g-3'>
      <div class='property-area col-md-3 mb-3'>
        <label class='form-label'>物件名称</label>
        <select name='property_id', id ='property_id', class='form-control'>
          <option value=<%= @payment.property.id %>><%= @payment.property.building %></option>
          <% current_user.property.all.each do |property| %>
            <option value=<%= property.id %>><%= property.building %></option> 
          <% end %>
        </select>
      </div>
      <div class='col-md-2 mb-3', id="room-area">
        <label class='form-label'>部屋</label>
        <select name='room_id', id ='room_id', class='form-control'>
          <option value=<%= @payment.room.id %>><%= @payment.room.room_name %></option>
          <% current_user.rooms.all.each do |room| %>
            <option value=<%= room.id %>><%= room.room_name %></option> 
          <% end %>
        </select>
      </div>
      <div class='col-md-2 mb-3', id="contract-area">
        <label class='form-label'>契約</label>
        <select name='contract_id', id ='contract_id', class='form-control'>
          <option value=''>選択してください</option>
          <% current_user.contracts.all.each do |contract| %>
            <option value=<%= contract.id %>><%= contract.start_date %></option> 
          <% end %>
        </select>
      </div>
      <div class='col-md-2 mb-3'>
        <label class='form-label'>支払い月</label>
        <%= f.date_select :paid_date, {discard_day: true, start_year:2000}, class:'form-control' %>
      </div>
      <div class='col-md-2 mb-3'>
        <label class='form-label'>支払い有無</label>
        <div>
          <%= f.radio_button :paid, '済' %>
          <%= f.label :paid_ok, "済" %>
        </div>
        <div>
          <%= f.radio_button :rent, '未' %>
          <%= f.label :paid_yet, "未" %>
        </div>
      </div>
      <div class=''>
        <%= f.submit "登録" ,class:'btn btn-primary' %>
        <%=link_to 'もどる', payments_path, class:'' %>
      </div>
    </div>
  <% end %>
</div>