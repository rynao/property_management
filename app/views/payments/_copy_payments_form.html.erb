<%= form_with(url: payments_path, method: :post, local: true) do |f|%>
  <table class="table">
    <thead>
      <tr>
        <th>物件名称</th>
        <th>部屋</th>
        <th>契約開始日</th>
        <th>金額</th>
        <th>支払い月</th>
        <th>未納チェック</th>
      </tr>
    </thead>
    <tbody class="bulk-registration-form">
      <% contracts.each do |payment|%>
        <%= fields_for "payments[]", payment do |p|%>
          <tr class="item", id='payments-form', data-name=<%= p.index %>>
            <td>
              <%= p.text_field :property_id, class:'form-control', value: payment.property.id, required: true %><%= payment.property.building %>
            </td>
            <td>
              <%= p.text_field :room_id, class:'form-control', value: payment.room.id, required: true %><%= payment.room.name %>
            </td>
            <td>
              <%= p.text_field :contract_id, class:'form-control', value: payment.id, required: true %><%= payment.start_date %>
            </td>
            <td>
              <%= p.text_field :amounts, class:'form-control', value: payment.rent, required: true %>
            </td>
            <td>
              <%# <%= p.date_select :paid_date, {discard_day: true, start_year:2000}, class:'form-control' %> %>
            </td>
            <td>
              <%# <%= p.check_box :not_paid %> %>
              <%# <%= p.label :not_paid, "未" %> %>
            </td>
            <%= p.hidden_field :user_id, value: current_user.id, id:'room_user_id' %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <div class='mx-auto col-md-4 text-center'>
    <%= link_to '入力欄追加', '#', id:'add-form-btn' %>
  </div>
  <div class='row my-3'>
    <%= f.submit "登録" ,class:'d-block mx-auto col-md-4 btn btn-primary' %>
    <div class=' mt-3 d-flex justify-content-center'>
      <%=link_to 'もどる', payments_path, class:'' %>
    </div>
  </div>
<% end %>