<%= render 'layouts/header' %>

<div class='container mt-5'>
  <h3 class='mb-3'>支払い情報</h3>
  <div class='mb-3'>
    物件名称：<%= @payment.property.building %>
  </div>
  <div class='mb-3'>
    部屋番号：<%= @payment.room.name %>
  </div>
  <div class='mb-3'>
    支払い月：<%= @payment.paid_date.strftime("%Y年%m月") %>
  </div>
  <div class='mb-3'>
    家賃：<%= @payment.contract.rent %>円
  </div>
    <div class='mb-3'>
    未納：<%= @payment.not_paid %>
  </div>
  <div>
    <%=link_to edit_payment_path, class:'mx-3' do %>
      <i class="bi bi-pencil-square" style="font-size: 22px; color: #666;"></i>
    <% end %>
    <%=link_to payment_path, method: :delete, data: {confirm: "削除しますか？"}, class:'' do %>
      <i class="bi bi-trash3" style="font-size: 22px; color: #666;"></i>
    <% end %>
    <%=link_to '戻る', payments_path %>
  </div>
</div>