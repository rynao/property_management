<%= render 'layouts/header' %>

<div class='container mt-5'>
  <div class='card shadow px-5 py-3 d-flex flex-nowrap'>
    <h3 class='mx-auto mt-3'>支払い情報登録</h3>
    <div>
      <table class="table">
        <thead>
          <tr>
            <th>
              <input type='button' id='check_all' value='選択/解除' class=''>
            </th>
            <th>物件名称</th>
            <th>部屋</th>
            <th>契約開始日</th>
            <th>契約終了日</th>
            <th>金額</th>
          </tr>
        </thead>
        <tbody>
          <% @contracts.each do |f| %>
            <tr>
              <td><input type='checkbox' class='check' value=<%= f.id %>></td>
              <td><%= f.property.building %></td>
              <td><%= f.room.name %></td>
              <td><%= f.start_date %></td>
              <td><%= f.end_date %></td>
              <td><%= f.rent.to_s(:currency, locale: 'jp') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div>
      <input type='button' id='copy_btn' value='コピー' class='mt-3'>
    </div>
    <div class='mt-5' id='copy_contracts_data'>
      <%= render 'payments_form', form: @form %>
    </div>
  </div>
</div>