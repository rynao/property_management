<div class='container mt-5 d-flex justify-content-center'>
  <div class='card shadow px-5 py-5' style='max-width: 600px'>
    <div class='row g-3'>
      <h4 class='text-center'>ユーザー登録</h4>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true  do |f| %>
        <div class="mb-4">
          <%= f.label 'ニックネーム', class:'form-label' %><br />
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class:'form-control', required: true %>
        </div>
        <div class="mb-4">
          <%= f.label 'メールアドレス', class:'form-label' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', required: true %>
        </div>
        <div class="mb-4">
          <%= f.label 'パスワード', class:'form-label' %>
          <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:'form-control', required: true %>
        </div>
        <div class="mb-5">
          <%= f.label 'パスワード（確認）', class:'form-label' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control', required: true %>
        </div>
        <div class="mb-4 d-flex justify-content-center">
          <%= f.submit "登録",class:'btn btn-primary col-12' %>
        </div>
      <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>