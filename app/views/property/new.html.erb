<%= render 'layouts/header' %>

<div class='container mt-5 d-flex justify-content-center'>
  <div class='card shadow px-5 py-3' style='max-width: 700px'>
    <h3 class='mx-auto mt-3'>物件情報登録</h3>
    <%= form_with model:@property, url:property_index_path, local: true do |f| %>
      <div class='row g-3 py-5'>
        <div class='row mb-4'>
          <label class='col-md-3 form-label'>郵便番号</label>
          <div class='col-md-3'>
            <%= f.text_field :postal_code, class:'form-control', placeholder:'110-0001' %>
          </div>
        </div>
        <div class='row mb-4'>
          <label class='col-md-3 form-label'>都道府県</label>
          <div class='col-md-3'>
            <%= f.text_field :prefecture, class:'form-control', placeholder:'東京都' %>
          </div>
          <label class='col-md-2 form-label'>市・区</label>
          <div class='col-md-4'>
            <%= f.text_field :city, class:'form-control', placeholder:'台東区' %>
          </div>
        </div>
        <div class='row mb-4'>
          <label class='col-md-3 form-label'>町名番地以降</label>
          <div class='col-md-9'>
            <%= f.text_field :address_line, class:'form-control', placeholder:'谷中1-2-3' %>
          </div>
        </div>
        <div class='row mb-4'>
          <label class='col-md-3 form-label'>物件名称</label>
          <div class='col-md-6'>
            <%= f.text_field :building, class:'form-control', placeholder:'谷中パークハイツ' %>
          </div>
        </div>
        <div class='row mb-4'>
          <label class='col-md-3 form-label'>総戸数</label>
          <div class='col-md-3'>
            <%= f.number_field :total_units, class:'form-control', placeholder:'6' %>
          </div>
          <label class='col-md-3 form-label'>築年月</label>
          <div class='col-md-3'>
            <%= f.date_select :building_year, {discard_day: true, start_year:1950}, class:'form-control', placeholder:'' %>
          </div>
        </div>
        <div class='row mb-4'>
          <label class='col-md-3 form-label'>土地面積(㎡)</label>
          <div class='col-md-3'>
            <%= f.text_field :land_area, class:'form-control', placeholder:'146.36' %>
          </div>
          <label class='col-md-3 form-label'>建物面積(㎡)</label>
          <div class='col-md-3'>
            <%= f.text_field :building_area, class:'form-control', placeholder:'117.44' %>
          </div>
        </div>
        <div class='row mb-4'>
          <label class='col-md-3 form-label'>物件種別</label>
          <div class='col-md-3'>
            <%= f.select :property_type, ["1棟マンション","1棟アパート","1棟商業ビル","戸建賃貸","区分マンション","賃貸併用住宅"], {include_blank: '---'}, {class: 'form-control'} %>
          </div>
          <label class='col-md-3 form-label'>所有者</label>
          <div class='col-md-3'>
            <%= f.select :business_entity, ["法人","個人"], {include_blank: '---'}, {class: 'form-control'} %>
          </div>
        </div>
        <div class='row my-3'>
          <%= f.submit "登録" ,class:'d-block mx-auto col-md-4 btn btn-primary' %>
          <div class=' mt-3 d-flex justify-content-center'>
            <%=link_to 'もどる', property_index_path, class:'' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>