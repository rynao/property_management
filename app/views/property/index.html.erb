<%= render 'layouts/header' %>

<div class='container'>
  <div class='d-flex mt-5'>
    <h4 style="margin-right: 40px;">物件一覧</h4>
    <%=link_to '物件登録', new_property_path, class:'btn btn-primary' %>
  </div>

<table class='table table-hover mt-3'>
    <thead>
      <tr>
        <th>物件名称</th>
        <th>都道府県</th>
        <th>市・区</th>
        <th>物件種別</th>
        <th>部屋数</th>
      </tr>
    </thead>
    <tbody>
      <% @property.each do |property| %>
        <tr onclick='window.location="/property/<%= property.id %>"' role="link" style="cursor: pointer;">
          <td><%= property.building %></td>
          <td><%= property.prefecture %></td>
          <td><%= property.city %></td>
          <td><%= property.property_type %></td>
          <td><%= property.total_units %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>